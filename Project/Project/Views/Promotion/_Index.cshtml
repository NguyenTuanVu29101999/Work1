@model IEnumerable<Project.Model.EF.KHUYEN_MAI>

@{
    Layout = null;
}

<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="font-size:15px;font-family:Arial">
            <thead class="thead-dark">
                <tr style="text-align:center" class="col-md-3">
                    <th>STT</th>
                    <th>Mã khuyến mãi</th>
                    <th>Tên chương trình</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày Kết thúc</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.IDKM" class="col-md-3" style="text-align:center">
                            <td>@i</td>
                            <td>@item.MAKM</td>
                            <td>@item.TEN_CH_TRINH</td>
                            <td>@String.Format("{0:d}", item.NGAY_BD)</td>
                            <td>@String.Format("{0:d}", item.NGAY_KT)</td>
                            <td>
                                <a href="/Promotion/Edit/@item.IDKM" class="btn btn-primary" style="height:35px"><i class="fas fa-pen" aria-hidden="true"></i></a>
                                <a href="/Promotion/Delete/@item.IDKM" class="btn btn-danger" style="height:33px"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                        i++;
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr>
                        <td colspan="7">Không có bản ghi nào</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
