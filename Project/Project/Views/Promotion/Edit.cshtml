@model Project.Model.EF.KHUYEN_MAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Edit</h3>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.IDKM)

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MAKM, null, new { @class = "small mb-1" })
                                            @Html.TextBoxFor(model => model.MAKM, null, new { @class = "form-control py-4", @type = "text", @placeholder = "Tên sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.MAKM, "", new { @class = "badge badge-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TEN_CH_TRINH, null, new { @class = "small mb-1" })
                                            @Html.TextBoxFor(model => model.TEN_CH_TRINH, null, new { @class = "form-control py-4", @type = "text", @placeholder = "đơn vị tính" })
                                            @Html.ValidationMessageFor(model => model.TEN_CH_TRINH, "", new { @class = "badge badge-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NGAY_BD, null, new { @class = "small mb-1" })
                                            @Html.TextBoxFor(model => model.NGAY_BD, new { @class = "form-control" } )
                                            @Html.ValidationMessageFor(model => model.NGAY_BD, "", new { @class = "badge badge-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NGAY_KT, null, new { @class = "small mb-1" })
                                            @Html.TextBoxFor(model => model.NGAY_KT,   new { @class = "form-control" } )
                                            @Html.ValidationMessageFor(model => model.NGAY_KT, "", new { @class = "badge badge-danger" }) 
                                        </div>
                                        <div class="card-footer text-right">
                                            <div class="small">
                                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger" })
                                            </div>
                                        </div>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>




