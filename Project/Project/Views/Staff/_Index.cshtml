@model IEnumerable<Project.Model.EF.NHAN_VIEN>

@{
    Layout = null;
}
<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="font-size:15px;font-family:Arial">
            <thead class="thead-dark">
                <tr style="text-align:center" class="col-md-3">
                    <th>STT</th>
                    <th>Họ tên</th>
                    <th>giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Liên lạc</th>
                    <th>Lương</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MANV" class="col-md-3" style="text-align:center">
                            <td>@i</td>
                            <td>@item.HO_TEN</td>
                            <td>@item.GT</td>
                            <td>@String.Format("{0:d}", item.NGAY_SINH)</td>
                            <td>@item.SDT</td>
                            <td>@String.Format("{0:0,0}",item.LUONG)</td>
                            <td>
                                <a href="/Staff/Edit/@item.MANV" class="btn btn-primary" style="height:35px"><i class="fas fa-pen" aria-hidden="true"></i></a>
                                <a href="/Staff/Delete/@item.MANV" class="btn btn-danger" style="height:33px"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                        i++;
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr>
                        <td colspan="7">Không có bản ghi nào</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
